<p id="notice"><%= notice %></p>

<h1>Teams</h1>

<table class="table table-bordered">
  <thead>
    <tr>
      <th>Team id</th>
      <th>Name</th>
      <th>Team Members</th>
      <th colspan="3">Details</th>
    </tr>
  </thead>

  <tbody>
    <% @teams.each do |team| %>
      <tr>
        <td><%= team.id %></td>
        <td><%= team.name %></td>
        <td>
        <% team.students.each do |student|%>
            <ul>
              <li><% name = student.Fname + " " + student.Lname%>
              <%= link_to name, Student.find_by(email: student.email) %>
              </li>
            </ul>
           <% end %>
        </td>
        <td><%= link_to 'Show', team %>
        <%= link_to 'Edit', edit_team_path(team) %>
        <%= link_to 'Destroy', team, method: :delete, data: { confirm: 'Are you sure?' } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
<br>

<%= link_to 'New Team', new_team_path %>

<%
 if current_user.role == User.roles.keys[0] 
  controller.redirect_to '/static_pages'
  if !Student.exists?(:email => current_user.email)
    controller.redirect_to '/students/new'
  end
end
%>
