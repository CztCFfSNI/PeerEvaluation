<main>
    <div id="titlepage" class="carousel slide" data-bs-ride="carousel">
      <div class="carousel-indicators">
      </div>
      <div class="carousel-inner">
        <div class="carousel-item active">
          <svg class="bd-placeholder-img" width="100%" height="250px" xmlns="http://www.w3.org/2000/svg" aria-hidden="true" preserveAspectRatio="xMidYMid slice" focusable="false"><rect width="100%" height="100%" fill="#777"/></svg>
  
          <div class="container">
            <div class="carousel-caption text-start">
              <h1>Hi
<% if current_user.role == User.roles.keys[0] %>
 <%=Student.where("email = ?", current_user.email).pluck(:Fname).first%>!
<% else %>
Professor!<% end %> Welcome to GoodPET<br></h1><h3> (Good Peer Evaluation Tool)</h3><br>
<p>
Your login email is: <%= current_user.email %>
</p>
            </div>
          </div>
        </div>
      </div>
    </div>


    <div id="myCarousel" class="carousel slide" data-bs-ride="carousel">
      <div class="carousel-indicators">
        <button type="button" data-bs-target="#myCarousel" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
        <button type="button" data-bs-target="#myCarousel" data-bs-slide-to="1" aria-label="Slide 2"></button>
        <button type="button" data-bs-target="#myCarousel" data-bs-slide-to="2" aria-label="Slide 3"></button>
        <button type="button" data-bs-target="#myCarousel" data-bs-slide-to="3" aria-label="Slide 4"></button>
      </div>
      <div class="carousel-inner">
        <div class="carousel-item active">
          <svg class="bd-placeholder-img" width="100%" height="300px" xmlns="http://www.w3.org/2000/svg" aria-hidden="true" preserveAspectRatio="xMidYMid slice" focusable="false"><rect width="100%" height="100%" fill="darkred"/></svg>
  
          <div class="container">
            <div class="carousel-caption text-start">
              <h1>Students</h1>
              <% if current_user.admin?%>
              <p>Go to see your students!</p>
              <p><%= link_to "See the students", '../students', class: "btn btn-lg btn-info" %></p>
              <%else%>
              <p>Go to check your profile!</p>
              <p>
              <%= link_to "Profile", Student.find_by(email: current_user.email), class:"btn btn-lg btn-info" %></p>
              <%end%>
            </div>
          </div>
        </div>

        <div class="carousel-item">
          <svg class="bd-placeholder-img" width="100%" height="300px" xmlns="http://www.w3.org/2000/svg" aria-hidden="true" preserveAspectRatio="xMidYMid slice" focusable="false"><rect width="100%" height="100%" fill="darkgreen"/></svg>
  
          <div class="container">
            <div class="carousel-caption">
              <h1>Team</h1>
              <% if current_user.admin?%>
              <p>Go to manage teams!</p>
              <p><%= link_to "Manage Teams", '/teams', class: "btn btn-lg btn-primary" %></p>
              <%else%>
              <p>Go to check your teammates!</p>
              <p><%= link_to "Check Teammates", '/teams', class: "btn btn-lg btn-primary" %></p>
              <%end%>
            </div>
          </div>
        </div>

        <div class="carousel-item">
          <svg class="bd-placeholder-img" width="100%" height="300px" xmlns="http://www.w3.org/2000/svg" aria-hidden="true" preserveAspectRatio="xMidYMid slice" focusable="false"><rect width="100%" height="100%" fill="violet"/></svg>
  
          <div class="container">
            <div class="carousel-caption">
              <h1>Reviews</h1>
              <p>Go to see all reviews!</p>
              <p><%= link_to "View Reviews", '../reviews', class: "btn btn-lg btn-success" %></p>
            </div>
          </div>
        </div>

        <div class="carousel-item">
          <svg class="bd-placeholder-img" width="100%" height="300px" xmlns="http://www.w3.org/2000/svg" aria-hidden="true" preserveAspectRatio="xMidYMid slice" focusable="false"><rect width="100%" height="100%" fill="darkblue"/></svg>
  
          <div class="container">
            <div class="carousel-caption">
            <h1>Project</h1>
              <% if current_user.admin?%>
              <p>Go to manage projects!</p>
              <p><%= link_to "Manage Projects", '../projects', class: "btn btn-lg btn-dark" %></p>
              <%else%>
              <p>Go to check your projects and give reviews!</p>
              <p><%= link_to "Check Projects", '../projects', class: "btn btn-lg btn-dark" %></p>
              <%end%>
            </div>
          </div>
        </div>
      </div>
      <button class="carousel-control-prev" type="button" data-bs-target="#myCarousel" data-bs-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Previous</span>
      </button>
      <button class="carousel-control-next" type="button" data-bs-target="#myCarousel" data-bs-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Next</span>
      </button>
    </div>


  </main>
<%
 if current_user.role == User.roles.keys[0] && !Student.exists?(:email => current_user.email)
        controller.redirect_to '/students/new'
    end
%>