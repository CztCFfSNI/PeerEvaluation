<%= form_with(model: review) do |form| %>
  <% if review.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(review.errors.count, "error") %> prohibited this review from being saved:</h2>

      <ul>
        <% review.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :project_id %>
    <%= form.number_field :project_id %>
  </div>

  <div class="field">
    <%= form.label :written_for_id %>
    <table>
    <% teammates = [] %>
    <% @teams.each do |team| %>
    <% team.students.each do |student| %>
    <% if !(teammates.include? student) && student.email != current_user.email %>
    <% teammates << student %>
      <tr>
        <td><%= student.Fname %></td>
        <td><%= student.Lname %></td>
        <td><%= student.email %></td>
        <td><%= student.id %></td>
      </tr>
    <% end %>
    <% end %>
    <% end %>
    </table>
    <%= form.number_field :written_for_id %>
  </div>

  <div class="field">
    <%= form.label :personalscore %>
    <%= form.number_field :personalscore %>
  </div>

  <div class="field">
    <%= form.label :workscore %>
    <%= form.number_field :workscore %>
  </div>

  <div class="field">
    <%= form.label :comment %>
    <%= form.text_field :comment %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
