      <ul>
        <% review.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

<% p_id = params[:project_id]
project = Project.find_by(id: p_id)
teammates = [] 
me = Student.find_by(email: current_user.email)
%>


  <div class="field"><strong>You are currently assigned to Project <%= project.name %></strong>
    <%= form.hidden_field :project_id, value: params[:project_id] %>
  </div>

  <div class="field"><strong>Written by <%= me.Fname + " " + me.Lname %></strong>
    <%= form.hidden_field :written_by_id, value: me.id %>
  </div>

  <div class="field">
    <%= form.label :"Enter the id of the teammate you would like to leave a review for:"%>
    <br>
    <table class="table">
    <tr>
      <td><strong>Last Name</strong></td>
      <td><strong>First Name</strong></td>
      <td><strong>Email</strong></td>
      <td><strong>Student id</strong></td>
      <td><strong>Teams Info</strong></td>
    </tr>
    <tr>
      <td><%= me.Fname %></td>
      <td><%= me.Lname %></td>
      <td><%= me.email %></td>
      <td><%= me.id %></td>
      <td>
      <% me.teams.each do |t| %>
      team_name: <%= t.name %>, team_id: <%= t.id %>  <br>
      <% end %>
       </td>
    </tr>


    <% me.teams.each do |team| %>
    <% if team.projects.include? project %>
    <% team.students.each do |student| %>
    <% if !(teammates.include? student) && student.email != current_user.email %>
    <% teammates << student %>
      <tr>
        <td><%= student.Fname %></td>
        <td><%= student.Lname %></td>
        <td><%= student.email %></td>
        <td><%= student.id %></td>
        <td>
        <% student.teams.each do |t| %>
        team_name: <%= t.name %>, team_id: <%= t.id %>  <br>
        <% end %>
        </td>
      </tr>
    <% end %>
    <% end %>
    <% end %>
    <% end %>
    </table>
    <%= form.number_field :written_for_id %>
  </div>

  <div class="field">
    <%= form.label :personalscore %>
    <%= form.number_field :personalscore %>
  </div>

  <div class="field">
    <%= form.label :workscore %>
    <%= form.number_field :workscore %>
  </div>

  <div class="field">
    <%= form.label :comment %>
    <%= form.text_area :comment %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
